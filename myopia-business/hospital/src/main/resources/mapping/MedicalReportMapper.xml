<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wupol.myopia.business.hospital.domain.mapper.MedicalReportMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wupol.myopia.business.hospital.domain.model.MedicalReport">
    </resultMap>

    <!-- 通用查询条件 -->
    <sql id="Base_Where_Clause">
        <where>
            <trim prefixOverrides="and">
                <if test="@Ognl@isNotEmpty(id)">and `id` = #{id}</if>
                <if test="@Ognl@isNotEmpty(studentId)">and `student_id` = #{studentId}</if>
                <if test="@Ognl@isNotEmpty(hospitalId)">and `hospital_id` = #{hospitalId}</if>
                <if test="@Ognl@isNotEmpty(departmentId)">and `department_id` = #{departmentId}</if>
                <if test="@Ognl@isNotEmpty(glassesSituation)">and `glasses_situation` = #{glassesSituation}</if>
                <if test="@Ognl@isNotEmpty(doctorId)">and `doctor_id` = #{doctorId}</if>
                <if test="@Ognl@isNotEmpty(createTime)">and `create_time` = #{createTime}</if>
                <if test="@Ognl@isNotEmpty(updateTime)">and `update_time` = #{updateTime}</if>
            </trim>
        </where>
    </sql>


    <select id="getBy" resultMap="BaseResultMap">
        select *
        from h_medical_report
        <include refid="Base_Where_Clause" />
    </select>

    <select id="getByPage" resultMap="BaseResultMap">
        select *
        from h_medical_report
        <include refid="Base_Where_Clause"/>
    </select>
    <select id="getVoBy" resultType="com.wupol.myopia.business.hospital.domain.vo.MedicalReportVo">
        select mr.*, h.name as hospitalName, hmr.create_time as visitDate
        from h_medical_report mr
        left join m_hospital h on mr.hospital_id = h.id
        left join h_medical_record hmr on hmr.id = mr.medical_record_id
        <include refid="Base_Where_Clause"/>

    </select>

    <select id="countReportBySchoolId" resultType="java.lang.Integer">
        select count(1)
        from h_medical_report
        where student_id = #{studentId};
    </select>
</mapper>
