<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="PATTERN">{"serviceName": "myopia-gateway", "thread": "%thread", "host": "%host", "logger": "%logger", "level": "%level", "message": "[%c{2}:%L] - %message"}%n</Property>
    </Properties>
    <Appenders>
        <Console name="Console-Appender" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %c{2}:%L - %msg%n
                </pattern>>
            </PatternLayout>
        </Console>
        <!-- 公网且没有认证，测试环境关闭 -->
        <!-- <Socket name="logstash" host="139.9.183.146" port="5044" protocol="TCP">
            <PatternLayout pattern="${PATTERN}" />
        </Socket> -->
    </Appenders>
    <Loggers>
        <Logger name="com.wupol" level="INFO" additivity="false">
            <AppenderRef ref="Console-Appender"/>
            <!-- <AppenderRef ref="logstash"/> -->
        </Logger>
        <!-- 默认level为error级别 -->
        <Root>
            <AppenderRef ref="Console-Appender"/>
            <!-- <AppenderRef ref="logstash"/> -->
        </Root>
    </Loggers>
</Configuration>